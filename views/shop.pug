extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content 
  main
    .grid
      if products.length > 0
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{ product.title }
            .card__image
              img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSslv3lzJ6p-jtKwmD6K4w82GdCf5Lj9nxB8Q&usqp=CAU", alt="A Book")
            .card__content
              h2.product__price $19.99
              p.product__description Book description
            .card__actions
              button.btn Add To Cart
      else
        h1 No Product!